<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:MaterialFont="clr-namespace:XF_FoodApp.Styles;assembly=XF_FoodApp"
             mc:Ignorable="d">

    <!-- MATERIAL ICONS FONT -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <OnPlatform x:Key="MaterialFont"
                x:TypeArguments="x:String"
                Android="materialdesignicons-webfont.ttf#Material Design Icons"
                iOS="Material Design Icons" />
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    
    <!-- CUSTOM ICONS FONT WITH IconMoon -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <OnPlatform x:Key="CustomIconFont"
                x:TypeArguments="x:String"
                Android="CustomIconFont.ttf#CustomIconFont"
                iOS="CustomIconFont" />
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    
    <!-- COLOR ICONS FONT -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <Color x:Key="TabColorIcon">#BABEC6</Color>
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    
    <!-- SIZE ICONS FONT -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <x:Double x:Key="TabSizeIcon">140</x:Double>
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    
    
    <!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> OPTIONAL <<<<<<<<<<<<<<<<<<<<<<<<<<<<<<< -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- PLATFORMS CHANGE ICONS FONT FOR Glyph -->
    <!--=====================================================================-->
    <OnPlatform x:Key="OnStringIcon"
                x:TypeArguments="x:String"
                Android="{x:Static MaterialFont:IconFont.AccessPoint}"
                iOS="{x:Static MaterialFont:IconFont.Cached}" />
    <!--=====================================================================-->

    <!-- PLATFORMS COLOR ICONS FONT -->
    <!--=====================================================================-->
    <OnPlatform x:Key="OnColorIcon"
                x:TypeArguments="Color"
                Android="#17D47E"
                iOS="#EA29E2" />
    <!--=====================================================================-->

    <!-- PLATFORMS SIZE ICONS FONT -->
    <!--=====================================================================-->
    <OnPlatform x:Key="OnSizeIcon"
                x:TypeArguments="x:Double"
                Android="200"
                iOS="30" />
    <!--=====================================================================-->

    <!-- PLATFORMS IN FontImageSource-->
    <!--=====================================================================-->
    <FontImageSource x:Key="OnFIconDemo"
                     FontFamily="{StaticResource MaterialFont}"
                     Glyph="{StaticResource OnStringIcon}"
                     Size="{StaticResource OnSizeIcon}"
                     Color="{StaticResource OnColorIcon}" />
    <!--=====================================================================-->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

    <!-- FontImageSource TABS -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <FontImageSource x:Key="icon_tab_explore"
                     FontFamily="{StaticResource CustomIconFont}"
                     Glyph="{x:Static MaterialFont:CustomIconFont.icon_tab_explore}"/>

    <FontImageSource x:Key="icon_tab_order"
                     FontFamily="{StaticResource CustomIconFont}"
                     Glyph="{x:Static MaterialFont:CustomIconFont.icon_tab_order}"/>

    <FontImageSource x:Key="icon_tab_favorite"
                     FontFamily="{StaticResource CustomIconFont}"
                     Glyph="{x:Static MaterialFont:CustomIconFont.icon_tab_favorite}"/>

    <FontImageSource x:Key="icon_tab_profile"
                     FontFamily="{StaticResource CustomIconFont}"
                     Glyph="{x:Static MaterialFont:CustomIconFont.icon_tab_profile}"/>
 
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

      
    <FontImageSource x:Key="IconDemo1"
                     FontFamily="{StaticResource CustomIconFont}"
                     Glyph="{x:Static MaterialFont:CustomIconFont.icon_add}"
                     Size="{StaticResource TabSizeIcon}"
                     Color="{StaticResource TabColorIcon}" />
</ResourceDictionary>